<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="start"
    android:layout_height="match_parent"
    tools:context=".Users.User_Home">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btncolor2"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title=" ">
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageview"
            android:layout_marginTop="10dp"
            android:src="@drawable/users"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/imageview"
            android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/imageview">
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@id/view"
            android:layout_centerInParent="true"
             />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/Rl_Mechanic"
        android:background="@drawable/btn_background"
        android:backgroundTint="@color/light_blue"
        android:layout_toLeftOf="@id/view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanic"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mechanic"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/Rl_Electrician"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_background"
        android:backgroundTint="@color/light_red"
        android:layout_toRightOf="@id/view"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electrician"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/electrician"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/Rl_Fuel_Supply"
        android:layout_below="@id/Rl_Mechanic"
        android:background="@drawable/btn_background"
        android:backgroundTint="@color/light_orange"
        android:layout_toLeftOf="@id/view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fuel Supply"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/charging"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/Rl_Mechanic"
        android:id="@+id/Rl_Tyre_Services"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_background"
        android:backgroundTint="@color/light_green"
        android:layout_toRightOf="@id/view"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tyre Service"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tyre"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/Rl_Fuel_Supply"
        android:id="@+id/Rl_Tow_Chain"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_background"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tow Chain"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tow_truck"
            android:layout_marginBottom="-10dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navmenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:focusableInTouchMode="true"
        android:theme="@style/NavigationDrawer"
        app:itemIconTint="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_navigation"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/btncolor2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/riderimage"
                        android:layout_width="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_profile" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/floatingbtncolor"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_below="@id/riderimage"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="-19dp"
                        android:background="@drawable/online"
                        android:backgroundTint="@color/red"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ll_img"
                    android:textColor="@color/white"
                    android:id="@+id/ridername"
                    android:text="username"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/ridername"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:id="@+id/riderrating"
                    android:text="No rating"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="5dp"
                    android:textSize="14sp" />
                <Switch
                    android:id="@+id/switchNotifactiondrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/ridername"
                    android:layout_below="@id/ll_img"
                    android:trackTint="@color/light_gray"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/profle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:drawableTint="@color/btncolor2"
                android:drawableLeft="@drawable/ic_user"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                android:padding="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:id="@+id/Rateus"
                android:textColor="@color/black"
                android:drawableTint="@color/btncolor2"
                android:drawableLeft="@drawable/ic_vector"
                android:drawablePadding="4dp"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:padding="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/ShareApp"
                android:layout_height="49dp"
                android:drawableLeft="@drawable/ic_share"
                android:drawablePadding="4dp"
                android:padding="15dp"
                android:text="Share App"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:drawableTint="@color/btncolor2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:drawableTint="@color/btncolor2"
                android:drawableLeft="@drawable/ic_privacy"
                android:drawablePadding="4dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support"
                android:textColor="@color/black"
                android:drawableTint="@color/btncolor2"
                android:drawableLeft="@drawable/ic_customer"
                android:drawablePadding="4dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:padding="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logout"
                android:textColor="@color/black"
                android:drawableTint="@color/btncolor2"
                android:drawableLeft="@drawable/logout"
                android:drawablePadding="4dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:padding="15dp"/>
        </LinearLayout>






    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>