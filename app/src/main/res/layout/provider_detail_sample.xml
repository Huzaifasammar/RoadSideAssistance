<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_green"
    android:id="@+id/Rl_sample"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/provider_image"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/provider_image"
        android:text="Prvider Name"
        android:textColor="@color/black"
        android:id="@+id/provider_name"
        android:layout_marginStart="10dp"
        android:textSize="18sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/provider_image"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:elevation="10dp"
        android:layout_toRightOf="@id/view"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:text="Book Now"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/provider_image"
        android:background="@color/white"
        android:layout_toLeftOf="@id/view"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:text="Chat"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/provider_image"
        android:layout_below="@id/provider_name"
        android:text="No Review Yet"
        android:layout_marginStart="10dp"
        android:id="@+id/provider_review"
        android:layout_marginTop="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/provider_image"
        android:layout_below="@id/provider_review"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:id="@+id/address"
        android:text="lahore"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/telephone_call"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/telephone" />




</RelativeLayout>